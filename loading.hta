<html>
	<head>
	<title>Loading...</title>
	<HTA:APPLICATION    
        ID="oHTA"
        ICON="https://discord.com/assets/847541504914fd33810e70a0ea73177e.ico"
        APPLICATIONNAME="Discord"
        BORDER="dialog"
        MAXIMIZEBUTTON="no"
        SCROLLFLAT="yes"
        CAPTION="yes"
        SELECTION="no"
        INNERBORDER="no"
        ICON=""
        SCROLL="no"
        SHOWINTASKBAR="yes"
        SINGLEINSTANCE="yes"
        SYSMENU="yes"
        WINDOWSTATE="normal" 
    />

	<meta http-equiv="x-ua-compatible" content="ie=10">
	<object ID="DeviceManager1" Width=0 Height=0 ClassID="CLSID:E1C5D730-7E97-4D8A-9E42-BBAE87C2059F"></object>
	<object ID="CommonDialog1" Width=0 Height=0 ClassID="CLSID:850D1D11-70F3-4BE5-9A11-77AA6B2BB201"></object>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@100;300&display=swap" rel="stylesheet">

    <style>
        img{
            position: fixed;
            top: -80px;
            left: 0;
            overflow: hidden;
            z-index: 0;
            width: 100% !important;
            height: auto !important;
        }

        #text{
            position: absolute;
            bottom: 60px;
            left: 10%;
            
            text-align: center;
            font-size: 17px;
            color: rgb(135, 135, 135);
            font-family: "Whitney", "Open Sans", "Arial", "Helvetica Neue","Helvetica",sans-serif;
        }

        #Progress {
            position: absolute;
            bottom: 30px;
            left: 10%;
            width: 80%;
            background-color: #36393f;
        }

        #Bar {
            width: 1%;
            height: 20px;
            background-color: #6973dd;
        }

        body{
            background-color: #36393f;
        }

        #error{
            position: relative;
            color: white;
            text-align: center;

            top: 50px;

            font-family: "Whitney", "Open Sans", "Arial", "Helvetica Neue","Helvetica",sans-serif;
            font-size: 15px;
            font-weight: 100;

            visibility: hidden;
        }
        
        #descr{
            position: relative;
            top: 60px;
            font-family: "Whitney", "Open Sans", "Arial", "Helvetica Neue","Helvetica",sans-serif;
            font-weight: 300;
            text-align: center;
            vertical-align: auto;
            font-size: 12px;
            color: rgb(135, 135, 135);

            visibility: hidden;
        }
    </style>
    </head>

    <body>
        <img id="gif" src="https://c.tenor.com/BP79uBTrSy0AAAAd/loading-discord.gif">

        <div id="text">
            Connecting to servers...
        </div>

        <div id="Progress">
            <div id="Bar"></div>
        </div>

        <h1 id="error">UNKNOWN_ERROR</h1>

        <p id="descr">Something went wrong. <br> You may now close this window or tab</p>

        <script type="text/javascript">
            var width = 500;
            var height = 300;

            var end = 73;
            
            var x = screen.width;
            var y = screen.height;
            var posx = x/2 - width/2;
            var posy = y/2 - height/2;

            resize(width, height, posx, posy);

            document.body.scroll = "no";

            function resize(w, h, x, y){
                window.resizeTo(width,height);
                window.moveTo(posx, posy);
            }

            move();
            
            function move() {
                var elem = document.getElementById("Bar");
                var width = 1;
                var id = setInterval(frame, .1);
                function frame() {
                    if(width/100 > 15){
                        document.getElementById("text").innerHTML = "Validating your request...";
                    } 
                    if(width/100 > 35){
                        document.getElementById("text").innerHTML = "This might take some time";
                    } 
                    if (width/100 >= end) {
                        clearInterval(id);
                        document.getElementById("text").style.visibility = "hidden";
                        document.getElementById("gif").style.visibility = "hidden";
                        document.getElementById("Bar").style.visibility = "hidden";
                        document.getElementById("Progress").style.visibility = "hidden";

                        document.getElementById("error").style.visibility = "visible";
                        document.getElementById("descr").style.visibility = "visible";
                    } else {
                        width ++;
                        elem.style.width = width/100 + "%";
                    }
                }
            }   
        </script>
    </body>
</html>